<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".EncerrarActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="ESCOLHA A FORMA DE PAGAMENTO"
        android:textSize="23sp"
        app:fontFamily="@font/agency_fb"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="95dp" />

    <ImageButton
        android:id="@+id/btnEncerrar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:background="@null"
        android:onClick="acabou"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/checkcircle"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="390dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/imageView5"
        android:layout_marginTop="-198dp"
        android:text="OBRIGADO!"
        android:textColor="?attr/colorControlActivated"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/agency_fb"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="309dp" />

    <ImageButton
        android:id="@+id/formaPag"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="82dp"
        android:onClick="EscolherForma"
        app:srcCompat="@drawable/iconelibrascardapio"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="104dp" />

    <RadioGroup
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-5dp"
        android:layout_toStartOf="@+id/btnEncerrar">

        <RadioButton
            android:id="@+id/carta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <RadioButton
            android:id="@+id/dinheir"
            android:layout_width="109dp"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="256dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="152dp"
        app:srcCompat="@drawable/obrigada" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="46dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="169dp"
        android:layout_marginRight="169dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cartaocredito" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="79dp"
        android:layout_height="48dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/btnEncerrar"
        android:layout_marginStart="11dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/dinheir0o" />

</RelativeLayout>